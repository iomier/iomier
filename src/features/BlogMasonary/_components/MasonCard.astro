---
import Tags from "@components/Tags.astro";

interface Props {
  post: {
    data: {
      title: string;
      description: string;
      tags: any[];
      heroImage: string;
    };
    slug: string;
  };
}

const { post } = Astro.props;
---

<div class="card relative w-fit h-fit font-work">
  <div class="min-h-[270px]">
    <figure class="h-full max-w-full">
      <img
        alt="post-thumb"
        loading="lazy"
        width="270"
        height="270"
        decoding="async"
        data-nimg="1"
        class="rounded-xl min-h-[270px] h-full object-cover"
        srcset="https://metablog-pro.vercel.app/_next/image?url=%2Fimages%2Fposts%2Fpost-2.png&w=384&q=75 1x, https://metablog-pro.vercel.app/_next/image?url=%2Fimages%2Fposts%2Fpost-2.png&w=640&q=75 2x"
        src="https://metablog-pro.vercel.app/_next/image?url=%2Fimages%2Fposts%2Fpost-2.png&w=640&q=75"
        style="color: transparent;"
      />
    </figure>
  </div><div
    class="card-body gap-0 absolute bottom-0 rounded-xl w-full z-20 p-4"
  >
    <div class="mt-3">
      <a href=`blog/${post.slug}`
        ><h2
          class="text-lg font-semibold line-clam-3 text-neutral-content hover:text-primary transition hover:duration-300 line-clamp-3"
        >
          {post.data.title}
        </h2></a
      >
      <div class="flex flex-wrap items-center gap-1.5">
        <Tags tags={post.data.tags.slice(-5)} />
      </div>
    </div>
  </div><div
    class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent rounded-xl"
  >
  </div>
</div>
