---
interface Props {
  href: string;
  title: string;
  icon: string;
}
const { href, title, icon } = Astro.props;
const pathname = new URL(Astro.request.url).pathname;
const activeLink =
  "text-white bg-blue-700 md:bg-transparent md:text-blue-700 md:dark:text-blue-500";
const link =
  " dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700";
---

<li>
  <a
    href={href}
    class={`flex flex-col justify-center rounded items-center mb-2 py-2 px-3 hover:bg-gray-100 md:hover:bg-transparent md:hover:text-blue-700 md:dark:hover:text-blue-500 ${pathname === href ? activeLink : link}`}
    aria-current="page"
  >
    <>
      <Fragment set:html={icon} />
      <span class="text-xs">{title}</span>
    </>
  </a>
</li>
