  <nav
    class="z-20 flex shrink-0 grow-0 justify-around fixed top-1/3 -translate-y-1/3 left-3"
  >
    <ul
      class="flex flex-col justify-center items-center p-2 text-justify rounded-lg shadow-lg backdrop-blur-lg min-h-[auto] min-w-[32px] bg-white border-gray-200 border dark:border-gray-800 dark:bg-gray-900"
    >
      {
        sideBarItems.map((item) => (
          <MenuLink title={item.title} href={item.href} icon={item.icon} />
        ))
      }
    </ul>
  </nav>
</div>

